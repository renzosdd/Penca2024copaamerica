{
  "version": 2,
  "builds": [
    {
      "src": "main.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/main.js" },
    { "src": "/login", "dest": "/main.js" },
    { "src": "/register", "dest": "/main.js" },
    { "src": "/dashboard.html", "dest": "/public/dashboard.html" },
    { "src": "/(.*)", "dest": "/main.js" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "script-src 'self' 'unsafe-eval'"
        }
      ]
    }
  ]
}
