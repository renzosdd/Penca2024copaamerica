<header>
    <nav class="blue darken-3">
      <div class="nav-wrapper container">
        <a href="/" class="brand-logo">
          <% if (user && user.role === 'admin') { %>
            Admin - <%= user.username %>
          <% } else { %>
            <img src="/images/Logo.png" alt="Logo" class="responsive-img logo-img">
          <% } %>
        </a>
        <% if (user) { %>
          <a href="#" data-target="mobile-nav" class="sidenav-trigger right"><i class="material-icons">menu</i></a>
          <ul class="right hide-on-med-and-down">
            <% if (typeof showInfo !== 'undefined' && showInfo) { %>
              <li>
                <a href="#" data-target="info-modal" class="modal-trigger">
                  <img src="/images/info.png" alt="Info" class="circle responsive-img icon-40">
                </a>
              </li>
            <% } %>
            <li>
              <a class="dropdown-trigger" href="#" data-target="user-dropdown">
                <img src="<%= user.avatar ? '/avatar/' + user.username : '/images/avatar.webp' %>" alt="Avatar" class="circle responsive-img icon-40">
              </a>
            </li>
          </ul>
        <% } %>
      </div>
    </nav>
  
    <% if (user) { %>
      <ul id="user-dropdown" class="dropdown-content">
        <% if (user.role === 'admin') { %>
          <li><a href="/dashboard">Dashboard</a></li>
        <% } %>
        <li><form action="/logout" method="POST"><button type="submit" class="btn-flat">Cerrar sesión</button></form></li>
      </ul>
  
      <ul class="sidenav" id="mobile-nav">
        <% if (user.role === 'admin') { %>
          <li><a href="#users">Users</a></li>
          <li><a href="#competitions">Competitions</a></li>
          <li><a href="#pencas">Pencas</a></li>
          <li><a href="#owners">Owners</a></li>
          <li><a href="#settings">Settings</a></li>
        <% } %>
        <li><form action="/logout" method="POST"><button type="submit" class="btn blue darken-2 white-text btn-block">Cerrar sesión</button></form></li>
      </ul>
    <% } %>
  <% if (user && user.role === 'admin') { %>
    <!-- Tabs moved to admin view -->
  <% } %>
</header>
